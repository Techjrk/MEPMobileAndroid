<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.SettingsViewModel"/>
    </data>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_settings"
            android:background="@color/lecetLightBlue"
            tools:context="com.lecet.app.content.SettingsActivity">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="0dp"
                          android:orientation="vertical">

                <!-- Profile -->
                <RelativeLayout style="@style/SettingsItemRelativeLayout">

                    <ImageView
                            android:id="@+id/user_profile_image"
                            style="@style/CommonIcon"
                            android:src="@mipmap/ic_help_outline_black"/>

                    <TextView
                            style="@style/SettingsTextView"
                            android:text="@string/update_your_profile"/>

                    <ImageView
                            style="@style/CommonIcon"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_chevron_right_black"/>

                </RelativeLayout>

                <include layout="@layout/rule_horiz_med"/>

                <!-- Change Reset Password -->
                <RelativeLayout style="@style/SettingsItemRelativeLayout"
                                android:onClick="@{viewModel.onResetPasswordClicked}">

                    <ImageView
                            style="@style/CommonIcon"
                            android:src="@mipmap/ic_lock_outline_black"/>

                    <TextView
                            style="@style/SettingsTextView"
                            android:text="@string/reset_password"/>

                    <ImageView
                            style="@style/CommonIcon"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_chevron_right_black"/>

                </RelativeLayout>

                <include layout="@layout/rule_horiz_med"/>

                <!-- Logout -->
                <RelativeLayout style="@style/SettingsItemRelativeLayout"
                                android:onClick="@{viewModel.onLogoutClicked}">
                    <ImageView
                            style="@style/CommonIcon"
                            android:src="@mipmap/ic_exit_to_app_black"/>

                    <TextView
                            style="@style/SettingsTextView"
                            android:text="@string/logout"/>
                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/rule_horiz_med"/>

        </LinearLayout>

    </RelativeLayout>
</layout>

