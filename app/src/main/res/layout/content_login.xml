<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.LoginViewModel"/>
    </data>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:bind="http://schemas.android.com/apk/res-auto"
            tools:showIn="@layout/activity_login"
            tools:context="com.lecet.app.content.LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView style="@style/FullScreenImageBackground"
                   android:src="@drawable/content_bg_login"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_above="@+id/create_account_button"
                      android:layout_marginBottom="32dp"
                      android:orientation="vertical">

            <include layout="@layout/include_lecet_logo"/>

            <!-- Email -->
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    bind:errorText="@{viewModel.emailErrorMessage}"
                    bind:errorEnabled="@{viewModel.emailValid ? true : false}">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_text_input"
                        android:hint="@string/email_address"
                        android:text="@={viewModel.email}"
                        style="@style/FormField.EditText"/>

            </android.support.design.widget.TextInputLayout>

            <!-- Password -->
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:errorEnabled="@{viewModel.passwordValid ? true : false}">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_text_input"
                        android:hint="@string/password"
                        android:text="@={viewModel.password}"
                        style="@style/FormField.EditText"/>

            </android.support.design.widget.TextInputLayout>

            <!-- Login Button -->
            <Button android:id="@+id/selection_bottom_button"
                    style="@style/CommonButton.TranspWithBorder"
                    android:layout_marginTop="10dp"
                    android:text="@string/login"
                    android:onClick="@{viewModel.onLoginClicked}"/>

            <!-- Forgot Password -->
            <TextView android:id="@+id/forgot_password_text_view"
                      style="@style/CommonText.Small"
                      android:text="@string/forgot_password"
                      android:textColor="@color/lecetWhite"
                      android:layout_marginTop="20dp"
                      android:gravity="center"
                      android:onClick="@{viewModel.onForgotPasswordClicked}"/>

        </LinearLayout>



    </RelativeLayout>
</layout>


