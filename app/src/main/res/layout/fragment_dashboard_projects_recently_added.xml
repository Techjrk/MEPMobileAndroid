<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.lecet.app.viewmodel.DashboardProjectsRecentlyAddedVM" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            tools:context="com.lecet.app.content.MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <!-- TITLES -->
            <LinearLayout android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="4dp"
                          android:layout_gravity="center">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/subtitle_num"
                            style="@style/DashboardText.Subtitle"
                            android:text="@={viewModel.subtitleNum}"/>

                    <TextView
                            android:id="@+id/subtitle_text"
                            style="@style/DashboardText.Subtitle"
                            android:layout_marginLeft="8dp"
                            android:text="@={viewModel.subtitle}"/>

                </LinearLayout>

            </LinearLayout>

            <!-- CHART -->
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <!-- BUTTON STRIP -->
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="65dp"
                          android:background="@android:color/transparent"
                          android:orientation="horizontal">

                <!-- Housing -->
                <LinearLayout
                        android:id="@+id/button_housing"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dashboard_button_left_background_selector"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:onClick="@{viewModel.onHousingButtonClick}">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/strip_vertical_spacing"
                            android:src="@drawable/ic_housing" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/strip_vertical_spacing"
                            android:text="@string/dashboard_housing"
                            android:textColor="@color/lecetMediumOrange"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <!-- Engineering -->
                <LinearLayout
                        android:id="@+id/button_engineering"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dashboard_button_center_background_selector"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:onClick="@{viewModel.onEngineeringButtonClick}">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/strip_vertical_spacing"
                            android:src="@drawable/ic_engineering" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/strip_vertical_spacing"
                            android:text="@string/dashboard_engineering"
                            android:textColor="@color/lecetDarkOrange"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <!-- Building -->
                <LinearLayout
                        android:id="@+id/button_building"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dashboard_button_center_background_selector"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:onClick="@{viewModel.onBuildingButtonClick}">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/strip_vertical_spacing"
                            android:src="@drawable/ic_building" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/strip_vertical_spacing"
                            android:text="@string/dashboard_building"
                            android:textColor="@color/lecetLightBlue"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <!-- Utilities -->
                <LinearLayout
                        android:id="@+id/button_utilities"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/dashboard_button_right_background_selector"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:onClick="@{viewModel.onUtilitiesButtonClick}">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/strip_vertical_spacing"
                            android:src="@drawable/ic_utilities" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/strip_vertical_spacing"
                            android:text="@string/dashboard_utilities"
                            android:textColor="@color/lecetMediumBlue"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- CENTER ICONS -->
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/dashboard_icon_housing"
                        style="@style/DashboardChartCenterIcon"
                        android:src="@drawable/ic_housing" />

                <ImageView
                        android:id="@+id/dashboard_icon_engineering"
                        style="@style/DashboardChartCenterIcon"
                        android:src="@drawable/ic_engineering" />

                <ImageView
                        android:id="@+id/dashboard_icon_building"
                        style="@style/DashboardChartCenterIcon"
                        android:src="@drawable/ic_building" />

                <ImageView
                        android:id="@+id/dashboard_icon_utilities"
                        style="@style/DashboardChartCenterIcon"
                        android:src="@drawable/ic_utilities" />

            </FrameLayout>

        </FrameLayout>

    </RelativeLayout>

</layout>