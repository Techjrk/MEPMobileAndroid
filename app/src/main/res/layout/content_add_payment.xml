<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_payment"
        tools:context="com.lecet.app.content.AddPaymentActivity">

    <ImageView style="@style/FullScreenImageBackground"
               android:src="@drawable/content_bg_create_account"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                style="@style/OnboardingTitleTextView"
                android:text="@string/add_payment_info"/>

        <ImageView android:layout_width="175dp"
                   android:layout_height="175dp"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_horizontal"
                   android:src="@mipmap/ic_account_balance_black"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:layout_above="@+id/create_account_button"
                      android:orientation="vertical">

            <TextView
                      style="@style/CommonText.Small"
                      android:gravity="center"
                      android:paddingLeft="32dp"
                      android:paddingRight="32dp"
                      android:textColor="@color/lecetWhite"
                      android:text="@string/add_payment_info_details"/>

            <Button
                    style="@style/CommonButton"
                    android:id="@+id/selection_bottom_button"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/lecetWhite"
                    android:text="@string/add_payment_option"
                    android:background="@color/lecetDarkOrange"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            style="@style/HelpAnchorTextView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/ill_do_this_later"/>

</RelativeLayout>
