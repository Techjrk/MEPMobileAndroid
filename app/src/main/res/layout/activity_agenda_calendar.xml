<LinearLayout xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".content.AgendaCalendarActivity">

    <!-- This toolbar is used by the AgendaCalendarView to display the month name -->
    <android.support.v7.widget.Toolbar
            android:id="@+id/activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

    <com.github.tibolte.agendacalendarview.AgendaCalendarView
            android:id="@+id/agenda_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            agendaCalendar:agendaCurrentDayTextColor="@color/lecetDarkGray"
            agendaCalendar:calendarColor="@android:color/white"
            agendaCalendar:calendarCurrentDayTextColor="@color/lecetLightGray"
            agendaCalendar:calendarDayTextColor="@color/lecetDarkGray"
            agendaCalendar:calendarHeaderColor="@color/lecetLightGray"
            agendaCalendar:calendarPastDayTextColor="@color/lecetDarkGray"
            agendaCalendar:fabColor="@color/lecetDarkGray" />

</LinearLayout>
