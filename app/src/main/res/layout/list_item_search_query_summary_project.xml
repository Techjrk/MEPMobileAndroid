<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.lecet.app.viewmodel.SearchItemRecentViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:id="@+id/query_mapsectionview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

                <!-- MAP VIEW -->
            <ImageView
                android:id="@+id/query_search_item_project_image"
                android:layout_marginLeft="25dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                bind:imageUrl="@{viewModel.mapUrl}"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <!-- TITLE -->
            <TextView
                android:id="@+id/query_project_title_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/query_search_item_project_image"
                android:layout_alignTop="@id/query_search_item_project_image"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@{viewModel.title}"

                android:textColor="@color/lecetTextDarkGray"
                android:textSize="14sp"
                bind:typeface="@{`Lato-Bold.ttf`}"
                tools:text="New York" />
            <!-- ADDRESS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/query_search_item_project_image"
                android:layout_alignTop="@id/query_project_title_summary"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="@{viewModel.address}"
                android:textColor="@color/lecetTextLightGray"
                android:textSize="14sp"
                bind:typeface="@{`Lato-Bold.ttf`}"
                tools:text="New York" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/query_search_item_project_image"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                bind:srcCompat="@android:drawable/divider_horizontal_textfield" />
        </RelativeLayout>
    </LinearLayout>
</layout>

