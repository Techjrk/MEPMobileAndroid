                android:layout_gravity="center"
              android:gravity="center|bottom">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View android:id="@+id/dot_1" style="@style/DashboardPageIndicatorDot"/>
            <View android:id="@+id/dot_2" style="@style/DashboardPageIndicatorDot"/>
            <View android:id="@+id/dot_3" style="@style/DashboardPageIndicatorDot"/>
            <View android:id="@+id/dot_4" style="@style/DashboardPageIndicatorDot"/>

    </LinearLayout>

</RelativeLayout>
