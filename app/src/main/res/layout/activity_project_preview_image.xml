<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel" type="com.lecet.app.viewmodel.ProjectDetailPreviewImageViewModel" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/lecetButtonDarkBlue"
            tools:context="com.lecet.app.content.ProjectDetailPreviewImageActivity">

        <!-- MENU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/lecetButtonDarkBlue"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="@{viewModel::onChangeImageButtonClick}"
                android:text="Change"
                android:textColor="@color/lecetLightBlue"
                android:textSize="16sp"
                bind:typeface="@{`Lato-Bold.ttf`}" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="@string/add_photo"
                android:textColor="@color/lecetTextWhite"
                android:textSize="16sp"
                bind:typeface="@{`Lato-Bold.ttf`}" />

            <Button
                android:id="@+id/use_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/lecetLightBlue"
                android:text="Use"
                android:textSize="16sp"
                android:onClick="@{viewModel::onUseImageButtonClick}"/>

        </LinearLayout>


        <ImageView
                android:id="@+id/prevew_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:imageBitmap="@{viewModel.bitmap}" />

    </LinearLayout>

</layout>
