<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/activity_create_account"
        tools:context="com.lecet.app.content.CreateAccountActivity">

    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.CreateAccountViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView style="@style/FullScreenImageBackground"
                   android:src="@drawable/content_bg_create_account"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView
                    android:text="@string/what_is_your_name"
                    style="@style/OnboardingTitleTextView"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="25dp"
                          android:layout_above="@+id/create_account_button"
                          android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bind:errorEnabled="@{viewModel.firstNameValid ? true : false}">

                    <android.support.design.widget.TextInputEditText
                            android:hint="@string/first_name"
                            android:text="@={viewModel.firstName}"
                            style="@style/FormField.EditText"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bind:errorEnabled="@{viewModel.lastNameValid ? true : false}">

                    <android.support.design.widget.TextInputEditText
                            android:hint="@string/last_name"
                            android:text="@={viewModel.lastName}"
                            style="@style/FormField.EditText"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bind:errorEnabled="@{viewModel.emailValid ? true : false}">

                    <android.support.design.widget.TextInputEditText
                            android:hint="@string/email_address"
                            android:text="@={viewModel.email}"
                            style="@style/FormField.EditText"/>

                </android.support.design.widget.TextInputLayout>

                <Button android:id="@+id/next_button"
                        android:layout_marginTop="20dp"
                        android:text="@string/next"
                        android:onClick="@{viewModel.onNextClicked}"
                        style="@style/FormField.Button"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>