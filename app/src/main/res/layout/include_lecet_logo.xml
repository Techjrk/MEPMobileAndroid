<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lecetMediumOrange">

    <ImageView
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            style="@style/LogoImage"/>

    <TextView
            android:id="@+id/logo_text_view"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            style="@style/LecetLogoTextView"/>

    <TextView
            android:id="@+id/powered_by_text_view"
            android:text="@string/powered_by_domandtom"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            style="@style/LecetLogoTextView.Small"/>

</LinearLayout>