<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_update_profile"
        tools:context="com.lecet.app.content.UpdateProfileActivity">

    <ImageView style="@style/FullScreenImageBackground"
               android:src="@drawable/content_bg_create_account"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                android:text="@string/update_your_profile"
                style="@style/OnboardingTitleTextView"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:layout_above="@+id/create_account_button"
                      android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:layout_height="101dp"
                    android:layout_width="101dp"
                    android:src="@mipmap/ic_account_circle_black"/>


            <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText style="@style/FormField.EditText"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText style="@style/FormField.EditText"/>

            </android.support.design.widget.TextInputLayout>

            <Button android:id="@+id/selection_bottom_button"
                    android:layout_marginTop="30dp"
                    android:text="@string/next"
                    style="@style/FormField.Button"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/skip"
            style="@style/HelpAnchorTextView"/>

</RelativeLayout>
