<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.ProfileViewModel"/>
    </data>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_profile"
            tools:context="com.lecet.app.content.ProfileActivity">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/lecetMediumOrange">

            <!-- Profile photo -->
            <ImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_photo"/>

            <!-- Edit Profile button -->

            <Button
                    android:id="@+id/edit_profile_button"
                    style="@style/CommonButton.TranspWithBorder"
                    android:text="@string/edit_profile"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{viewModel.onEditProfileClicked}"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="0dp"
                          android:layout_above="@+id/create_account_button"
                          android:orientation="vertical">

                <!-- Phone -->
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="25dp"
                                android:orientation="horizontal">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_centerVertical="true"
                                  android:layout_alignParentLeft="true"
                                  android:layout_marginLeft="0dp"
                                  android:orientation="vertical">

                        <TextView
                                android:text="@string/phone"
                                style="@style/ProfileTextView.Small" />

                        <TextView
                                android:id="@+id/phone"
                                android:text="@{viewModel.phone}"
                                tools:text="630-674-1684"
                                style="@style/ProfileTextView.Medium"/>

                    </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/rule_horiz_med"/>

                <!-- Email -->
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="15dp"
                                android:orientation="horizontal">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_centerVertical="true"
                                  android:layout_alignParentLeft="true"
                                  android:layout_marginLeft="0dp"
                                  android:layout_marginTop="40dp"
                                  android:orientation="vertical">

                        <TextView
                                android:text="@string/email"
                                style="@style/ProfileTextView.Small"/>

                        <TextView
                                android:id="@+id/email"
                                android:text="@{viewModel.email}"
                                tools:text="email@domandtom.com"
                                style="@style/ProfileTextView.Medium"/>

                    </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/rule_horiz_med"/>


                <!-- Address -->
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="25dp"
                                android:orientation="horizontal">

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_centerVertical="true"
                                  android:layout_alignParentLeft="true"
                                  android:layout_marginLeft="0dp"
                                  android:layout_marginTop="40dp"
                                  android:orientation="vertical">

                        <TextView
                                android:text="@string/address"
                                style="@style/ProfileTextView.Small"/>

                        <TextView
                                android:id="@+id/address1"
                                android:text="@{viewModel.address1}"
                                tools:text="835 S. Main St"
                                style="@style/ProfileTextView.Medium"/>

                        <TextView
                                android:id="@+id/address2"
                                android:text="@{viewModel.address2}"
                                tools:text="Lombard IL 60148"
                                style="@style/ProfileTextView.Medium"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>