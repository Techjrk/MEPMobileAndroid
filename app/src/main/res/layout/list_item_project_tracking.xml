<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context="com.lecet.app.content.ProjectTrackingListActivity">

    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.ListItemProjectTrackingViewModel"/>
    </data>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="6dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100"
                android:onClick="@{viewModel.onClick}">

            <!-- Image -->
            <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="20"
                    android:src="@mipmap/ic_crop_original_black"/>

            <!-- Details -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:paddingLeft="12dp">

                <TextView
                        android:id="@+id/project_name"
                        android:paddingTop="14dp"
                        tools:text="Parks Building"
                        style="@style/ListItemProjectTrackingTextView.Title"
                        android:text="@{viewModel.projectName}"/>

                <TextView
                        android:id="@+id/location"
                        tools:text="Tampa, FL"
                        style="@style/ListItemProjectTrackingTextView.Detail1"
                        android:text="@{viewModel.location}"/>

                <TextView
                        android:id="@+id/keywords"
                        tools:text="Vehicle Sales/Service "
                        style="@style/ListItemProjectTrackingTextView.Detail2"
                        android:text="@{viewModel.keywords}"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>