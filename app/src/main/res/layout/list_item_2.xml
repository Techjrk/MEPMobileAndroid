<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context="com.lecet.app.content.List2Activity">

    <data>
        <variable name="viewModel" type="com.lecet.app.viewmodel.ListItem2ViewModel"/>
    </data>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="6dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100"
                android:onClick="@{viewModel.onClick}">

            <!-- Image -->
            <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="20"
                    android:src="@mipmap/ic_crop_original_black"/>

            <!-- Details -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:paddingLeft="12dp">

                <TextView
                        android:id="@+id/title"
                        android:paddingTop="14dp"
                        tools:text="List Item 2 Title"
                        style="@style/ListItem2DetailTextView"
                        android:text="@{viewModel.string1}"/>

                <TextView
                        android:id="@+id/detail_1"
                        tools:text="Detail Information 1"
                        style="@style/ListItem2DetailTextView.Medium"
                        android:text="@{viewModel.string2}"/>

                <TextView
                        android:id="@+id/detail_2"
                        tools:text="Detail Information 2"
                        style="@style/ListItem2DetailTextView.Small"
                        android:text="@{viewModel.string3}"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>