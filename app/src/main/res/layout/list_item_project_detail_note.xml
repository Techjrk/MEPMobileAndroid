<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto" >
    <LinearLayout
        android:elevation="2dp"
        android:translationZ="4dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:textSize="18sp"
                android:textColor="@color/pureBlack"
                android:gravity="bottom"
                android:text="Note Title PlaceHolder"
                bind:typeface="@{`Lato-Regular.ttf`}"/>

            <ImageView
                android:scaleType="fitStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_add"/>

        </LinearLayout>

        <include layout="@layout/rule_horiz_blue"/>

        <TextView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/pureBlack"
            android:text="@string/testing_purposes_lorem_ipsum"
            android:maxLines="8"
            android:ellipsize="end"
            bind:typeface="@{`Lato-Regular.ttf`}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:scaleType="fitStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_image_placeholder"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="14sp"
                android:textColor="@color/lecetMediumBlue"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:text="Erin Bernardin"
                bind:typeface="@{`Lato-Regular.ttf`}"
                android:id="@+id/textView" />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textColor="@color/lecetLightGray"
                android:gravity="right"
                android:text="30 minutes ago"
                bind:typeface="@{`Lato-Regular.ttf`}"/>



        </LinearLayout>

    </LinearLayout>

</layout>