<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.lecet.app.viewmodel.ProjectTrackingListViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="100"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior"
                  tools:context="com.lecet.app.content.ProjectTrackingListActivity">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/project_tracking_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lecetLightGray"
                tools:listitem="@layout/list_item_project_tracking"/>

    </LinearLayout>

</layout>