<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="6dp">

    <!-- Left View and Details -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="100">

        <!-- TextView -->
        <TextView
                android:id="@+id/info"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/lecetDarkGray"
                android:layout_weight="20"
                android:textColor="@color/lecetLightGray"
                android:textSize="20sp"
                android:gravity="center"
                tools:text="Info"/>

        <!-- Details -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical"
                android:paddingLeft="12dp">

            <TextView
                    android:id="@+id/title"
                    android:paddingTop="10dp"
                    tools:text="List Item 1 Title"
                    style="@style/ListItem1DetailTextView"/>

            <TextView
                    android:id="@+id/detail_1"
                    tools:text="Detail Information 1"
                    style="@style/ListItem1DetailTextView.Medium"/>

            <TextView
                    android:id="@+id/detail_2"
                    tools:text="Detail Information 2"
                    style="@style/ListItem1DetailTextView.Small"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>