<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <!-- CHILD ITEM SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/child_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/j_child_img"
                style="@style/ImageDownArrow"
                android:paddingLeft="5dp"
                android:visibility="invisible"
                android:contentDescription="@string/down_arrow" />
            <CheckBox
                android:id="@+id/j_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/j_child_img"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingRight="8dp"
                bind:typeface="@{`Lato-Bold.ttf`}" />

        </RelativeLayout>
        <!-- Horizontal Separator -->
        <include layout="@layout/rule_horiz_light" />
    </LinearLayout>

</layout>