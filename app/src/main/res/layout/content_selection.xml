<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_selection"
        tools:context="com.lecet.app.content.SelectionActivity">

    <ImageView style="@style/FullScreenImageBackground"
               android:src="@drawable/content_bg_create_account"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <!-- Header Image -->
        <ImageView android:layout_width="match_parent"
                   android:layout_height="97dp"
                   android:layout_marginBottom="10dp"
                   android:scaleType="fitXY"
                   android:src="@drawable/content_header_1"/>

        <!-- Header Text -->
        <TextView android:text="@string/selections_header"
                  style="@style/OnboardingTitleTextView.NoPadding"/>


        <!-- Selection Buttons and Icons -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:layout_above="@+id/create_account_button"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="25dp"
                          android:layout_marginRight="15dp"
                          android:orientation="horizontal">

                <ImageView
                        android:src="@mipmap/ic_pageview_black"
                        style="@style/SelectionItemIcon"/>

                <TextView
                        android:text="@string/selection_item_1_desc"
                        style="@style/SelectionItemTextView"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginLeft="25dp"
                          android:layout_marginRight="15dp"
                          android:orientation="horizontal">

                <ImageView
                        android:src="@mipmap/ic_access_time_black"
                        style="@style/SelectionItemIcon"/>

                <TextView
                        android:text="@string/selection_item_2_desc"
                        style="@style/SelectionItemTextView"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginLeft="25dp"
                          android:layout_marginRight="15dp"
                          android:orientation="horizontal">

                <ImageView
                        android:src="@mipmap/ic_group_black"
                        style="@style/SelectionItemIcon"/>

                <TextView
                        android:text="@string/selection_item_3_desc"
                        style="@style/SelectionItemTextView"/>

            </LinearLayout>

            <!-- Bottom Button -->
            <Button android:id="@+id/selection_bottom_button"
                    android:layout_marginTop="20dp"
                    android:text="@string/selection_bottom_button_1"
                    style="@style/FormField.Button"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/skip"
            style="@style/HelpAnchorTextView"/>

</RelativeLayout>
