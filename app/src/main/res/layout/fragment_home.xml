<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/lecetMediumBlue"
              tools:context="com.lecet.app.content.HomeFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_photo"/>

        <TextView style="@style/CommonText.Light.Large"
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  tools:text="User Name"/>

        <TextView style="@style/CommonText.Light.Medium"
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  tools:text="Subtitle"/>

        <Button style="@style/CommonButton" 
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/check_in"/>

        <TextView style="@style/CommonText.Light.Medium"
                  android:layout_marginTop="16dp"
                  android:gravity="center"
                  tools:text="Home Screen Info"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_marginTop="16dp"
                      android:layout_marginBottom="20dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:paddingLeft="20dp"
                      android:paddingRight="20dp"
                      android:background="@color/lecetLightBlue">

            <TextView style="@style/CommonText.Dark.Small"
                      android:layout_width="wrap_content"
                      android:gravity="center"
                      tools:text="Details about the home screen info"/>

            <ImageButton android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:layout_marginLeft="10dp"
                         android:background="@mipmap/ic_refresh_black"/>

        </LinearLayout>

        <Button style="@style/CommonButton.TranspWithBorder"
                android:layout_marginTop="16dp"
                android:text="@string/activate"/>

    </LinearLayout>

</LinearLayout>
