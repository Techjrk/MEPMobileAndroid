<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.lecet.app.viewmodel.SearchItemRecentViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="210dp"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/location_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    bind:imageUrl="@{viewModel.mapUrl}" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@drawable/framecircle" />
            </FrameLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="1dp"
            android:text="@{viewModel.title}"
            android:textSize="14sp"
            bind:typeface="@{`Lato-Bold.ttf`}" />
    </LinearLayout>
</layout>

