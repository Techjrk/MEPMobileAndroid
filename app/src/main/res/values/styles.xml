<resources xmlns:android="http://schemas.android.com/tools">


    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lecetMediumBlue</item>
        <item name="colorPrimaryDark">@color/lecetButtonDarkBlue</item>
        <item name="colorAccent">@color/lecetLightBlue</item>
        <item name="android:windowBackground">@color/pureWhite</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Navigation -->
    <style name="CustomToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="LacetToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/activity_bar_background</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>


    <!-- Common -->
    <style name="FullScreenImageBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="FullScreenImageBackground.Gradient1">
        <item name="android:background">@drawable/content_bg_gradient_1</item>
    </style>

    <style name="CommonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lecetTextMediumGray</item>
    </style>

    <style name="CommonText.Light">
        <item name="android:textColor">@color/lecetTextMediumGray</item>
    </style>

    <style name="CommonText.Light.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CommonText.Light.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonText.Light.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommonText.Dark">
        <item name="android:textColor">@color/pureBlack</item>
    </style>

    <style name="CommonText.Dark.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CommonText.Dark.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonText.Dark.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/lecetButtonDarkerBlue</item>
        <item name="android:textColorHint">@color/lecetTextLightGray</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CommonButton.TranspWithBorder">
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:background">@drawable/shape_rect_transp_border_2</item>
    </style>

    <style name="CommonIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CommonIcon.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <!-- Form fields and buttons -->
    <style name="FormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/lecetLightBlue</item>
        <item name="android:textColorHint">@color/lecetTextMediumGray</item>
        <item name="android:textColor">@color/lecetTextMediumGray</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="FormField.EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/pureBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:editable">true</item>
    </style>

    <style name="FormField.EditText.Login">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/lecetTextMediumGray</item>
        <item name="android:textColor">@color/pureBlack</item>
    </style>

    <style name="FormField.EditText.Secure">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="FormField.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FormField.Button">
        <item name="android:background">@drawable/shape_rect_transp_border_2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Help -->
    <style name="HelpAnchorTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Logo -->
    <style name="LogoImage">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/logo_mep</item>
    </style>

    <style name="LogoImage.Medium">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="LogoImage.Small">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="LecetLogoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="LecetLogoTextView.Small">
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Onboarding -->
    <style name="OnboardingTitleTextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="OnboardingTitleTextView.NoPadding">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="SelectionItemIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SelectionItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <!-- Dashboard -->
    <style name="ViewPagerArrowButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="ViewPagerArrowButton.Left">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_alignParentLeft">true</item>
