    </style>

    <style name="ViewPagerArrowButton.Right">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/button_arrow_right_selector</item>
    </style>

    <style name="DashboardChartCenterIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:visibility">invisible</item>
    </style>


    <style name="DashboardPageIndicatorDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/shape_dot_unselected</item>
    </style>

    <style name="DashboardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lecetTextWhite</item>
    </style>

    <style name="DashboardText.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">16sp</item>
    </style>

    <style name="DashboardChartButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/strip_vertical_spacing</item>
    </style>

    <style name="DashboardChartButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Change Password -->
    <style name="ChangePasswordTextViewSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/lecetTextMediumGray</item>
    </style>


    <!-- Settings -->
    <style name="SettingsItemRelativeLayout" parent="android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsUserImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SettingsImageIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_centerVertical">true</item>
